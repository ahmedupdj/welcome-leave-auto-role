    </footer>

    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #181818;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #3498db;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        main {
            padding: 20px;
        }

        footer {
            background-color: #3498db;
            color: #fff;
            padding: 10px;
            text-align: center;
        }

        .auto-role-settings {
            margin-bottom: 30px;
        }

        .auto-role-settings h2 {
            color: #3498db;
        }

        form {
            display: grid;
            grid-gap: 10px;
        }

        label {
            color: #fff;
        }

        select, input, button {
            width: 100%;
            padding: 10px;
        }

        button {
            background-color: #3498db;
            color: #fff;
            border: none;
            cursor: pointer;
        }

        button:hover {
            background-color: #2980b9;
        }

        /* أنماط CSS للجانب */
.sidebar {
    background-color: #f2f2f2;
    padding: 15px;
    border-radius: 5px;
}

.sidebar h2 {
    color: #3498db;
}

ul {
    list-style-type: none;
    padding: 0;
}

li a {
    text-decoration: none;
    color: #333;
    display: block;
    margin-bottom: 10px;
    transition: color 0.3s ease;
}

li a:hover {
    color: #3498db;
}

    </style>
</body>
</html>
