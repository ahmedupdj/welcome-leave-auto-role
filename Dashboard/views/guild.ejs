<body>
    <div class="content">
        <h2>Choose your server</h2>

        <div class="servers">
            <% 
                const sortedGuilds = guilds.sort((a, b) => {
                    const botInA = bot.guilds.cache.get(a.id) ? -1 : 1;
                    const botInB = bot.guilds.cache.get(b.id) ? -1 : 1;
                    return botInA - botInB;
                });

                sortedGuilds.forEach((guild, index) => { %>
                    <div class="server">
                        <div class="icon-and-name">
                            <% if (guild.icon) { %>
                                <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png?size=512" alt="<%= guild.name %> Icon" class="server-icon">
                            <% } else { %>
                                <!-- Use a default image or some placeholder -->
                                <img src="https://cdn.glitch.com/82fe990a-7942-42e3-9790-39807ccdb9f6%2Ficon-404-dark.png?v=1602427904949" alt="<%= guild.name %> Icon" class="server-icon">
                            <% } %>
                            <p class="guild-name"><%= guild.name %></p>
                        </div>

                        <!-- Add condition to check if the bot is in the guild -->
                        <% if (bot.guilds.cache.get(guild.id)) { %>
                            <a href="/server/<%= guild.id %>" class="button1 edit">Manage</a>
                        <% } else { %>
                            <p class="guild-name" style="color: rgb(255, 52, 52);">Bot not in this server</p>
                            <a href="https://discord.com/api/oauth2/authorize?client_id=947952564803096676&permissions=8&scope=bot&guild_id=<%= guild.id %>" class="button1 add">Add Bot</a>
                        <% } %>
                    </div>
                <% }); %>
        </div>
    </div>
</main>






<style>
    body {
          font-family: 'Arial', sans-serif;
         background-color: #181818;
          color: #fff;
          margin: 0;
          padding: 0;
      }
  
      .content {
          max-width: 800px;
          margin: 0 auto;
          padding: 20px;
      }
  
      h2 {
          text-align: center;
      }
  
      .servers {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.server {
  background-color: #2a2a2a;
  border-radius: 10px;
  margin: 10px;
  padding: 20px;
  text-align: center;
  transition: background-color 0.3s ease;
  width: calc(33.33% - 20px); /* تعديل هنا لتحديد العرض المناسب بين السيرفرات */
  box-sizing: border-box; /* لحساب التباعد بشكل صحيح */
}

.server:hover {
  background-color: #3a3a3a;
}

.icon-and-name {
  margin-bottom: 20px;
}

.server-icon {
  width: 70px;
  height: 70px;
  border-radius: 50%;
  margin-right: 20px;
}

.guild-name {
  font-weight: bold;
  margin: 0;
  font-size: 1.2em;
}

.button1 {
  color: #fff;
  text-decoration: none;
  padding: 12px 24px;
  border-radius: 5px;
  margin-top: 20px;
  display: inline-block;
  transition: background-color 0.3s ease;
}

.edit {
  background-color: #7289da;
}

.add {
  background-color: #43b581;
}

*, ::after, ::before {
        box-sizing: border-box;
    }
    *, ::after, ::before {
        box-sizing: border-box;
    }
    ::-webkit-resizer {
        background-color: #666;
    }
    ::-webkit-scrollbar {
        width: 12px;
        height: 3px;
    }
    ::-webkit-scrollbar-button {
        display: none;
        background-color: #000;
    }
    ::-webkit-scrollbar-corner {
        background-color: #2f3136;
    }
    ::-webkit-scrollbar-thumb {
        height: 50px;
        background-color: #6d6d79;
        border-radius: 5px;
        border-top: solid;
        border-bottom: solid;
        border-color: #36393f;
    }
    ::-webkit-scrollbar-track {
        background-color: hsla(240,5%,45%,.3);
    }
    ::-webkit-scrollbar-track-piece {
        background-color: #2f3136;
    }

</style>
  
</body>